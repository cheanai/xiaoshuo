/* components/book.wxss */
.book-container {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  background-color: rgb(124, 238, 194);
  margin-bottom: 10px;
}

.book-header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  background-color: rgb(124, 238, 194);
}

.book-title {
  text-align: left;
}

.book-author {
  text-align: right;
}

.book-content {
  margin-top: 10px;
}
