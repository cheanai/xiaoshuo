.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0%;
}

.header {
  width: 100%;
  padding: 10px;
  text-align: center;
  background-color: #f0f0f0;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.directory {
  flex-grow: 1;
  overflow-y: auto;
}

.directory-item {
  padding: 10px;
  border-bottom: 1px solid #ddd;
}
