/* pages/bookDetail/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.name {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.author {
  font-size: 25rpx;
  text-align: center;
  margin-bottom: 15rpx;
}

.content {
  width: 100%;
}

.description {
  font-size: 30rpx;
  color: #333;
}
.bottom {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}

.btn {
  height: 80rpx;
  background-color: #1AAD19;
  color: white;
  border-radius: 10rpx;
  text-align: center;
}