/* pages/bookshelf/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
}

.header {
  width: 100%;
  padding: 20rpx;
  background-color: #f8f8f8;
  text-align: center;
}

.title {
  font-size: 36rpx;
  color: #333;
}

.bookshelf {
  width: 100%;
  margin-top: 20rpx;
}

.book-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.book-title {
  font-size: 32rpx;
  color: #333;
}

.book-author {
  font-size: 28rpx;
  color: #999;
}
