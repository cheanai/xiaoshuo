/* pages/read/index.wxss */


.container {
  width: 100%;
  height: 100vh; /* 注意这里 */
  padding: 0%;
  background-color: aquamarine;
}

scroll-view ::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}

.top {
  width: 100%;
  height: 25px;
  text-align: center;
  background-color: aquamarine;
}

.content {
  flex-grow: 1;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  font-size: 16px;
  line-height: 1.5;
  padding-top: 0px;
}
.center-area {
  position: fixed;
  top: 40%;
  left: 35%;
  width: 30%;
  height: 15%;
  z-index: 9999;
}

.text {
  white-space: pre-wrap;
}

.settings {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
  padding: 10px;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: space-around;
  align-items: center;
}


.settings slider {
  flex: 2;
  margin: 0 10px;
}
.settings switch {
  flex: 1;
  margin: 0 10px;
}

.settings button {
  flex: 1;
  margin: 0 0px;
  padding-left: 2px;
  padding-right: 2px;
}
.chapter-navigation {
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
}

.chapter-navigation button {
  padding: 10px;
  font-size: 16px;
  color: white;
  background-color: #3C91E6;
  border: none;
  border-radius: 5px;
}

.chapter-navigation button:first-child {
  margin-right: 10px;
}

.chapter-navigation button:last-child {
  margin-left: 10px;
}