<!--pages/search/index.wxml-->
<view>
     <view>
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
            <!-- 搜索框 -->
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="请输入搜索内容" bindinput="onInputChange"/>
                </view>
            </view>
            <!-- 搜索按钮,调用搜索查询方法 -->
            <view class="weui-search-bar__cancel-btn" bindtap='searchNovel'>搜索</view>
        </view>
    </view>
    <scroll-view class="bookshelf" scroll-y="true" bindscrolltolower="loadMore" enable-back-to-top="true">
      <mybook wx:for="{{books}}" wx:key="*this" book-id="{{item.id}}" book-name="{{item.name}}" book-author="{{item.author}}" latest-chapter="{{item.latestChapter}}"></mybook>
    </scroll-view>
</view>

